@model DataTransferObjects.ApplicationVM


<br/>
<h2>@ViewBag.Title</h2>

<h3>@ViewBag.Subtitle</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CustomerEmail)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerEmail)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RecievedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RecievedDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AnimalName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AnimalName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AnimalSpeciesID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AnimalSpeciesID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AnimalBreed)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AnimalBreed)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.AdoptionApplicationID)
        @Html.HiddenFor(model => model.CustomerEmail)
        <div class="form-actions no-color">
            <input type="submit" value="Cancel Adoption" class="btn btn-primary" /> 
            @Html.ActionLink("Back to App List", "CustomerApplicationList", new { customerEmail = User.Identity.Name } , new { @class = "btn btn-primary" })
        </div>
    }
</div>
