@model WPFPresentation.Models.ProductListViewModel

@{
    ViewBag.Title = "Search Results";
}
<div class="container">
    <div class="row">
        <h2 class="my-2">@ViewBag.Title</h2>
    </div>
</div>
<div class="d-flex flex-wrap justify-content-center pt-5">
    @foreach (var p in Model.Products)
    {
        @Html.Partial("_ProductPartial", p);
    }
</div>
@Html.PageLinks(Model.PagingInfo, x => Url.Action("Search", new { page = x, searchString = ViewData["SearchString"] }))
