<Page x:Class="WPFPresentationLayer.AMPages.AnimalControls"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFPresentationLayer.AMPages"
      mc:Ignorable="d" 
      d:DesignHeight="845" d:DesignWidth="1289"
      Title="AnimalControls">
    <Canvas x:Name="canViewAnimalList" Height="845" Width="1289">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="680"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="700"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label FontSize="18" VerticalAlignment="Center" Margin="45 0 0 0">Search:</Label>
            <TextBox x:Name="txtSearchAnimal" Margin="50 10 400 10" Text="Animal Name" Width="300" GotFocus="txtSearchAnimal_GotFocus" TextChanged="txtSearchAnimal_TextChanged"></TextBox>
            <Button x:Name="btnSearchAnimal" Content="Search" Width="130" Margin="435 10 320 10" Click="btnSearchAnimal_Click"></Button>

            <DataGrid x:Name="dgActiveAnimals" Grid.Row="1" Width="1280" Grid.ColumnSpan="2" SelectionMode="Single"
                       Padding="0" CanUserResizeRows="False"
                       CanUserResizeColumns="False" CanUserReorderColumns="False"  
                      Loaded="Window_Loaded" IsReadOnly="True"
                      MouseDoubleClick="DgActiveAnimals_MouseDoubleClick"
                      AutoGeneratedColumns="dgActiveAnimals_AutoGeneratedColumns">
            </DataGrid>

            <Button x:Name="btnAddAnimal" Margin="5 15 150 5"  Grid.Row="2" Grid.Column="0" Width="150" Height="50" 
                    FontSize="16" Click="BtnAddAnimal_Click" HorizontalAlignment="Right">ADD ANIMAL</Button>
            <Button x:Name="btnSpecies" Grid.Row="2" Grid.Column="0" Width="175" Height="50"
                    FontSize="16" Margin="150 15 5 5" Click="btnSpecies_Click" HorizontalAlignment="Left">EDIT ANIMAL SPECIES</Button>
            <CheckBox x:Name="chkActive" Grid.Row="2" Grid.Column="1" 
                      VerticalAlignment="Center" VerticalContentAlignment="Center"
                      FontSize="8" Content="View Inactive Animals" Click="chkActive_Click" Margin="5">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2" />
                </CheckBox.LayoutTransform>
            </CheckBox>
        </Grid>
        <Canvas Height="845" Width=" 1280" x:Name="canAddAnimal" Background="AntiqueWhite" Visibility="Hidden">
            <Grid Height="800" Width=" 1280">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label FontSize="36" VerticalAlignment="Center" Grid.Row="0">Register New Animal</Label>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <!--Animal Name-->
                    <Label x:Name="lblAnimalName" Grid.Row="0" Grid.Column="0" FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Right">Animal Name:</Label>
                    <TextBox x:Name="txtAnimalName"  Grid.Row="0" Grid.Column="1" Background="LightGray" Height="30" 
                     Margin="25 0 25 0" VerticalContentAlignment="Center" FontSize="16"></TextBox>

                    <!--Animal Species-->
                    <Label x:Name="lblAnimalSpecies" Grid.Row="1" Grid.Column="0" FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Right">Animal Species:</Label>
                    <ComboBox x:Name="cmbAnimalSpecies" Grid.Row="1" Grid.Column="1" Height="30" 
                      Margin="25 0 25 0" VerticalContentAlignment="Center" FontSize="16"></ComboBox>

                    <!--Animal Breed-->
                    <Label x:Name="lblAnimalBreed" Grid.Row="2" Grid.Column="0" FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Right">Animal Breed:</Label>
                    <TextBox  x:Name="txtAnimalBreed" Grid.Row="2" Grid.Column="1" Background="LightGray" Height="30" 
                      Margin="25 0 25 0" VerticalContentAlignment="Center" FontSize="16"></TextBox>

                    <Grid Grid.Row="3" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition Height="80"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="175"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="175"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <!--Arrival Date-->
                        <Label x:Name="lblArrivalDate" Grid.Row="0" Grid.Column="0" FontSize="22" VerticalAlignment="Center" 
                       HorizontalAlignment="Center">Arrival Date:</Label>
                        <Calendar x:Name="cndArrivalDate" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" 
                          VerticalAlignment="Center"
                          SelectionMode="SingleDate"/>

                        <!--Date of Birth-->
                        <Label x:Name="lblDob" Grid.Row="0" Grid.Column="2" FontSize="22" VerticalAlignment="Center" 
                       HorizontalAlignment="Center">Date of Birth:</Label>
                        <Calendar x:Name="cndDob" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Center" 
                          VerticalAlignment="Center" Margin="0 0 12.5 0"/>

                        <!--Submit-->
                        <Button x:Name="BtnSubmitAnimalAdd" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" 
                        Width="150" FontSize="36" Padding="10"
                    VerticalAlignment="Center" HorizontalAlignment="Center" Click="BtnSubmitAnimalAdd_Click">Submit</Button>

                        <!--Cancel-->
                        <Button x:Name="btnCancelAnimalAdd" Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="2" 
                        Width="150" FontSize="36" Padding="10"
                    VerticalAlignment="Center" HorizontalAlignment="Center" Click="BtnCancelAnimalAdd_Click">Cancel</Button>
                    </Grid>
                </Grid>
            </Grid>
        </Canvas>

        <!--Name: Chuck Baxter
            Date: 3/3/2020
            CHECKED BY: Jaeho Kim, 3/3/2020
            CHECKED BY:
            XAML for an individual animal 
    
            Updater:
            Updated:
            Update:
            Approver:
        -->
        <Canvas x:Name="canIndividualAnimal" Background="AntiqueWhite" Height="800" Width="1289" Visibility="Hidden">
            <Grid Height="775" Width="1101">
                <Grid.RowDefinitions>
                    <!--name-->
                    <RowDefinition></RowDefinition>
                    <!--id-->
                    <RowDefinition></RowDefinition>
                    <!--species-->
                    <RowDefinition></RowDefinition>
                    <!--breed-->
                    <RowDefinition></RowDefinition>
                    <!--dob-->
                    <RowDefinition></RowDefinition>
                    <!--arrival-->
                    <RowDefinition></RowDefinition>
                    <!--checkboxes-->
                    <RowDefinition></RowDefinition>
                    <!--return-->
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <!--Name-->
                <Label Grid.Row="0" Content="Name:" HorizontalContentAlignment="Right"
                       FontSize="32" FontWeight="Bold" VerticalContentAlignment="Center" Margin="20"></Label>
                <Label x:Name="lblIndividualAnimalName" Grid.Row="0" Grid.Column="1" Content="" 
                       FontSize="32" FontWeight="Bold" VerticalContentAlignment="Center" Margin="20"></Label>

                <!--ID-->
                <Label Grid.Row="1" Content="Animal ID Number:" HorizontalContentAlignment="Right"
                       FontSize="32" FontWeight="Bold" VerticalContentAlignment="Center" Margin="20"></Label>
                <Label x:Name="lblIndividualAnimalID" Grid.Row="1" Grid.Column="1" Content="" 
                       FontSize="32" FontWeight="Bold" VerticalContentAlignment="Center" Margin="20"></Label>

                <!--Species-->
                <Label Grid.Row="2" Content="Species:" HorizontalContentAlignment="Right"
                       FontSize="32" FontWeight="Bold" VerticalContentAlignment="Center" Margin="20"></Label>
                <Label x:Name="lblIndividualAnimalSpecies" Grid.Row="2" Grid.Column="1" Content="" 
                       FontSize="32" FontWeight="Bold" VerticalContentAlignment="Center" Margin="20"></Label>

                <!--Breed-->
                <Label Grid.Row="3" Content="Breed:" HorizontalContentAlignment="Right"
                       FontSize="32" FontWeight="Bold" VerticalContentAlignment="Center" Margin="20"></Label>
                <Label x:Name="lblIndividualAnimalBreed" Grid.Row="3" Grid.Column="1" Content="" 
                       FontSize="32" FontWeight="Bold" VerticalContentAlignment="Center" Margin="20"></Label>

                <!--Dob-->
                <Label Grid.Row="4" Content="Date of Birth:" HorizontalContentAlignment="Right"
                       FontSize="32" FontWeight="Bold" VerticalContentAlignment="Center" Margin="294,20,20,20"></Label>
                <Label x:Name="lblIndividualAnimalDob" Grid.Row="4" Grid.Column="1" Content="" 
                       FontSize="32" FontWeight="Bold" VerticalContentAlignment="Center" Margin="20"></Label>

                <!--Arrival Date-->
                <Label Grid.Row="5" Content="Arrival Date:" HorizontalContentAlignment="Right"
                       FontSize="32" FontWeight="Bold" VerticalContentAlignment="Center" Margin="350,20,0,20"></Label>
                <Label x:Name="lblIndividualAnimalArrivalDate" Grid.Row="5" Grid.Column="1" Content="" 
                       FontSize="32" FontWeight="Bold" VerticalContentAlignment="Center" Margin="20"></Label>

                <!--Check Boxes-->
                <Grid Grid.Row="6" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>

                    </Grid.ColumnDefinitions>

                    <!--Active-->
                    <CheckBox x:Name="chkIndvidualActive" Grid.Row="0" Grid.Column="0" 
                              VerticalAlignment="Center" VerticalContentAlignment="Center"
                              HorizontalAlignment="Center" IsEnabled="False"
                              FontSize="20" FontWeight="Bold" Content="Active" Margin="10">
                        <CheckBox.LayoutTransform>
                            <ScaleTransform ScaleX="2" ScaleY="2" />
                        </CheckBox.LayoutTransform>
                    </CheckBox>

                    <!--CurrentlyHoused-->
                    <CheckBox x:Name="chkIndvidualCurrentlyHoused" Grid.Row="0" Grid.Column="1" 
                              VerticalAlignment="Center" VerticalContentAlignment="Center"
                              HorizontalAlignment="Center" IsEnabled="False"
                              FontSize="20" FontWeight="Bold" Content="Currently Housed" >
                        <CheckBox.LayoutTransform>
                            <ScaleTransform ScaleX="2" ScaleY="2" />
                        </CheckBox.LayoutTransform>
                    </CheckBox>

                    <!--Adoptable-->
                    <CheckBox x:Name="chkIndvidualAdoptable" Grid.Row="0" Grid.Column="2" 
                              VerticalAlignment="Center" VerticalContentAlignment="Center"
                              HorizontalAlignment="Center" IsEnabled="False"
                              FontSize="20" FontWeight="Bold" Content="Adoptable" Margin="10">
                        <CheckBox.LayoutTransform>
                            <ScaleTransform ScaleX="2" ScaleY="2" />
                        </CheckBox.LayoutTransform>
                    </CheckBox>

                </Grid>

                <!--Return & Edit-->
                <Button x:Name="BtnReturnViewIndividualAnimal" Grid.Row="7" Grid.Column="0"
                        Width="150" FontSize="36" Padding="10"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Click="BtnReturnViewIndividualAnimal_Click">Return</Button>
                <Button x:Name="BtnEditIndividualAnimal" Grid.Row="7" Grid.Column="1"
                        Width="150" FontSize="36" Padding="10"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Click="BtnEditIndividualAnimal_Click">Edit</Button>
            </Grid>
        </Canvas>

        <!--Name: Chuck Baxter
            Date: 3/11/2020
            CHECKED BY: Austin Gee, 3/12/2020
            CHECKED BY:
            XAML for editing an animal 
    
            Updater: Ben Hanna
            Updated: 3/13/2020
            Update: Added click events
            Approver:
        -->
        <Canvas Height="845" Width=" 1280" x:Name="canEditAnimal" Background="AntiqueWhite" Visibility="Hidden">
            <Grid Height="800" Width=" 1280">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label FontSize="36" VerticalAlignment="Center" Grid.Row="0">Edit Animal</Label>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <!--ID-->
                    <Label Grid.Row="0"  HorizontalAlignment="Right" FontSize="22" VerticalAlignment="Center">Animal ID:</Label>
                    <Label x:Name="lblEditAnimalID" Grid.Row="0" Grid.Column="1" Content="" 
                           FontSize="16" VerticalContentAlignment="Center" Margin="25 0 25 0"></Label>

                    <!--Edit Animal Name-->
                    <Label x:Name="lblEditAnimalName" Grid.Row="1" Grid.Column="0" FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Right">Animal Name:</Label>
                    <TextBox x:Name="txtEditAnimalName"  Grid.Row="1" Grid.Column="1" Background="LightGray" Height="30" 
                             Margin="25 0 25 0" VerticalContentAlignment="Center" FontSize="16"></TextBox>

                    <!--Edit Animal Species-->
                    <Label x:Name="lblEditAnimalSpecies" Grid.Row="2" Grid.Column="0" FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Right">Animal Species:</Label>
                    <ComboBox x:Name="cmbEditAnimalSpecies" Grid.Row="2" Grid.Column="1" Height="30" 
                              Margin="25 0 25 0" VerticalContentAlignment="Center" FontSize="16"></ComboBox>

                    <!--Edit Animal Breed-->
                    <Label x:Name="lblEditAnimalBreed" Grid.Row="3" Grid.Column="0" FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Right">Animal Breed:</Label>
                    <TextBox  x:Name="txtEditAnimalBreed" Grid.Row="3" Grid.Column="1" Background="LightGray" Height="30" 
                              Margin="25 0 25 0" VerticalContentAlignment="Center" FontSize="16"></TextBox>

                    <!--Edit Check Boxes-->
                    <Grid Grid.Row="4" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>

                        </Grid.ColumnDefinitions>

                        <!--Edit Active-->
                        <CheckBox x:Name="chkEditActive" Grid.Row="0" Grid.Column="0" 
                              VerticalAlignment="Center" VerticalContentAlignment="Center"
                              HorizontalAlignment="Center" IsEnabled="True"
                              FontSize="22" Content="Active" Margin="10" Click="ChkEditActive_Click">
                            <CheckBox.LayoutTransform>
                                <ScaleTransform ScaleX="2" ScaleY="2" />
                            </CheckBox.LayoutTransform>
                        </CheckBox>


                        <!--Edit CurrentlyHoused-->
                        <CheckBox x:Name="chkEditCurrentlyHoused" Grid.Row="0" Grid.Column="1" 
                              VerticalAlignment="Center" VerticalContentAlignment="Center"
                              HorizontalAlignment="Center" IsEnabled="True"
                              FontSize="22" Content="Currently Housed" Margin="10" Click="ChkEditCurrentlyHoused_Click">
                            <CheckBox.LayoutTransform>
                                <ScaleTransform ScaleX="2" ScaleY="2" />
                            </CheckBox.LayoutTransform>
                        </CheckBox>

                        <!--Edit Adoptable-->
                        <CheckBox x:Name="chkEditAdoptable" Grid.Row="0" Grid.Column="2" 
                              VerticalAlignment="Center" VerticalContentAlignment="Center"
                              HorizontalAlignment="Center" IsEnabled="True"
                              FontSize="22" Content="Adoptable" Margin="10" Click="ChkEditAdoptable_Click">
                            <CheckBox.LayoutTransform>
                                <ScaleTransform ScaleX="2" ScaleY="2" />
                            </CheckBox.LayoutTransform>
                        </CheckBox>

                    </Grid>

                    <Grid Grid.Row="5" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition Height="80"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="175"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="175"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <!--Edit Arrival Date-->
                        <Label x:Name="lblEditArrivalDate" Grid.Row="0" Grid.Column="0" FontSize="22" VerticalAlignment="Center" 
                               HorizontalAlignment="Center">Arrival Date:</Label>
                        <Calendar x:Name="cndEditArrivalDate" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"
                                  SelectionMode="SingleDate"/>

                        <!-- Edit Date of Birth-->
                        <Label x:Name="lblEditDob" Grid.Row="0" Grid.Column="2" FontSize="22" VerticalAlignment="Center" 
                               HorizontalAlignment="Center">Date of Birth:</Label>
                        <Calendar x:Name="cndEditDob" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Center" 
                                  VerticalAlignment="Center" Margin="0 0 12.5 0"/>

                        <!--Edit Submit-->
                        <Button x:Name="BtnSubmitAnimalEdit" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" 
                                Width="150" FontSize="36" Padding="10"
                                VerticalAlignment="Center" HorizontalAlignment="Center"
                                Click="BtnSubmitAnimalEdit_Click">Submit</Button>

                        <!--Edit Cancel-->
                        <Button x:Name="btnCancelAnimalEdit" Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="2" 
                                Width="150" FontSize="36" Padding="10"
                                VerticalAlignment="Center" HorizontalAlignment="Center"
                                Click="BtnCancelAnimalEdit_Click">Cancel</Button>
                    </Grid>
                </Grid>
            </Grid>
        </Canvas>

        <!--Name: Chuck Baxter
            Date: 3/18/2020
            CHECKED BY: Carl Davis, 3/18/2020
            CHECKED BY:
            XAML for editing an animal species
        
            Approver:
        -->
        <Canvas Height="800" Width=" 1280" x:Name="canEditAnimalSpecies" Background="AntiqueWhite" Visibility="Hidden">
            <Grid Height="775" Width=" 1280">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label FontSize="36" VerticalAlignment="Center" Grid.Row="0">Edit Animal Species</Label>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>

                    </Grid.ColumnDefinitions>

                    <!--Add New-->
                    <CheckBox x:Name="chkAddSpecies" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                              VerticalAlignment="Center" VerticalContentAlignment="Center"
                              HorizontalAlignment="Center" IsEnabled="True"
                              FontSize="18" Content="Add New Species" Margin="10"
                              Checked="chkAddSpecies_Checked" Unchecked="chkAddSpecies_Unchecked">
                        <CheckBox.LayoutTransform>
                            <ScaleTransform ScaleX="2" ScaleY="2" />
                        </CheckBox.LayoutTransform>
                    </CheckBox>

                    <!--Edit Existing-->
                    <CheckBox x:Name="chkEditSpecies" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2"
                              VerticalAlignment="Center" VerticalContentAlignment="Center"
                              HorizontalAlignment="Center" IsEnabled="True"
                              FontSize="18" Content="Edit Existing Species" Margin="10"
                              Checked="chkEditSpecies_Checked" Unchecked="chkEditSpecies_Unchecked">
                        <CheckBox.LayoutTransform>
                            <ScaleTransform ScaleX="2" ScaleY="2" />
                        </CheckBox.LayoutTransform>
                    </CheckBox>

                    <!--Delete Existing-->
                    <CheckBox x:Name="chkDeleteSpecies" Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2"
                              VerticalAlignment="Center" VerticalContentAlignment="Center"
                              HorizontalAlignment="Center" IsEnabled="True"
                              FontSize="18" Content="Delete Existing Species" Margin="10"
                              Checked="chkDeleteSpecies_Checked" Unchecked="chkDeleteSpecies_Unchecked">
                        <CheckBox.LayoutTransform>
                            <ScaleTransform ScaleX="2" ScaleY="2" />
                        </CheckBox.LayoutTransform>
                    </CheckBox>

                    <!--Edit Species Select-->
                    <Label x:Name="lblEditSpecies" Grid.Row="1" Grid.Column="0" FontSize="20" VerticalAlignment="Center" 
                           HorizontalAlignment="Right" Visibility="Hidden">Animal Species:</Label>
                    <ComboBox x:Name="cmbEditSpecies" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="5" Height="30" 
                              Margin="25 0 25 0" VerticalContentAlignment="Center" FontSize="16" Visibility="Hidden"
                              SelectionChanged="cmbEditSpecies_SelectionChanged"></ComboBox>

                    <!--Edit Animal Species Name-->
                    <Label x:Name="lblEditAnimalSpeciesID" Grid.Row="2" Grid.Column="0" FontSize="20" VerticalAlignment="Center" 
                           HorizontalAlignment="Right" Visibility="Hidden">Animal Species:</Label>
                    <TextBox x:Name="txtEditAnimalSpecies"  Grid.Row="2" Grid.Column="1"  Grid.ColumnSpan="5" Background="LightGray" Height="30" 
                             Margin="25 0 25 0" VerticalContentAlignment="Center" FontSize="16" Visibility="Hidden"></TextBox>

                    <!--Edit Animal Species Description-->
                    <Label x:Name="lblEditAnimalSpeciesDescription" Grid.Row="3" Grid.Column="0" FontSize="20" VerticalAlignment="Center" 
                           HorizontalAlignment="Right" Visibility="Hidden">Species Description:</Label>
                    <TextBox x:Name="txtEditAnimalSpeciesDescription"  Grid.Row="3" Grid.Column="1"  Grid.ColumnSpan="5" Background="LightGray" Height="30" 
                             Margin="25 0 25 0" VerticalContentAlignment="Center" FontSize="16" Visibility="Hidden"></TextBox>

                    <!--Delete Species Select-->
                    <Label x:Name="lblDeleteSpecies" Grid.Row="1" Grid.Column="0" FontSize="20" VerticalAlignment="Center" 
                           HorizontalAlignment="Right" Visibility="Hidden">Animal Species:</Label>
                    <ComboBox x:Name="cmbDeleteSpecies" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="5" Height="30" 
                              Margin="25 0 25 0" VerticalContentAlignment="Center" FontSize="16" Visibility="Hidden"></ComboBox>

                    <!--Add Animal Species Name-->
                    <Label x:Name="lblNewAnimalSpecies" Grid.Row="1" Grid.Column="0" FontSize="20" VerticalAlignment="Center" 
                           HorizontalAlignment="Right" Visibility="Hidden">New Animal Species:</Label>
                    <TextBox x:Name="txtNewAnimalSpecies"  Grid.Row="1" Grid.Column="1"  Grid.ColumnSpan="5" Background="LightGray" Height="30" 
                             Margin="25 0 25 0" VerticalContentAlignment="Center" FontSize="16" Visibility="Hidden"></TextBox>

                    <!--Add Animal Species Description-->
                    <Label x:Name="lblNewAnimalSpeciesDescription" Grid.Row="2" Grid.Column="0" FontSize="20" VerticalAlignment="Center" 
                           HorizontalAlignment="Right" Visibility="Hidden">Species Description:</Label>
                    <TextBox x:Name="txtNewAnimalSpeciesDescription"  Grid.Row="2" Grid.Column="1"  Grid.ColumnSpan="5" Background="LightGray" Height="30" 
                             Margin="25 0 25 0" VerticalContentAlignment="Center" FontSize="16" Visibility="Hidden"></TextBox>

                    <!--Add Species Submit-->
                    <Button x:Name="BtnSubmitAnimalAddSpecies" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" 
                            Width="150" FontSize="36" Padding="10" Visibility="Hidden"
                            VerticalAlignment="Center" HorizontalAlignment="Center"
                            Click="BtnSubmitAnimalAddSpecies_Click">Add</Button>

                    <!--Edit Species Submit-->
                    <Button x:Name="BtnSubmitAnimalEditSpecies" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" 
                            Width="150" FontSize="36" Padding="10" Visibility="Hidden"
                            VerticalAlignment="Center" HorizontalAlignment="Center"
                            Click="BtnSubmitAnimalEditSpecies_Click">Update</Button>

                    <!--Delete Species Submit-->
                    <Button x:Name="BtnSubmitAnimalDeleteSpecies" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" 
                            Width="150" FontSize="36" Padding="10" Visibility="Hidden"
                            VerticalAlignment="Center" HorizontalAlignment="Center"
                            Click="BtnSubmitAnimalDeleteSpecies_Click">Delete</Button>

                    <!--Edit Species Cancel-->
                    <Button x:Name="btnCancelAnimalEditSpecies" Grid.Row="7" Grid.Column="3" Grid.ColumnSpan="3" 
                            Width="150" FontSize="36" Padding="10"
                            VerticalAlignment="Center" HorizontalAlignment="Center" Click="btnCancelAnimalEditSpecies_Click">Cancel</Button>
                </Grid>
            </Grid>
        </Canvas>
    </Canvas>
</Page>
