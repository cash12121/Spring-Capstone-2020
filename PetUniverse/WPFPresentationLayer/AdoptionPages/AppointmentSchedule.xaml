    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="400*"/>
            <ColumnDefinition Width="570*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dgAppointmentList" Grid.Row="0" Grid.Column="1" Margin="0" SelectionMode="Single" 
                                  IsReadOnly="True" AutoGeneratedColumns="DgAppointmentList_AutoGeneratedColumns" Loaded="DgAppointmentList_Loaded"/>
