<Page x:Class="WPFPresentationLayer.AdoptionPages.AppointmentSchedule"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFPresentationLayer.AdoptionPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">


    <!-- Name: Thomas Dupuy
    Date: 2/18/2020
    CHECKED BY: Austin Gee
     
    This tab contains the schedule for adoptions appointments
      
    UPDATE BY: NA
    UPDATE DATE: NA
