    <Page x:Class="WPFPresentationLayer.AdoptionPages.pgAdoptionInterviewer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFPresentationLayer.AdoptionPages"
      mc:Ignorable="d" Background="AliceBlue"
      d:DesignHeight="845" d:DesignWidth="1280"
      Title="pgAdoptionInterviewer" Loaded="Page_Loaded">

    <Grid Width="1280" Height="800">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dgAdoptionAappointmentList" Grid.Row="1" Grid.Column="1" SelectionMode="Single" IsReadOnly="True" AutoGeneratedColumns="dgAdoptionAappointmentList_AutoGeneratedColumns"/>
        <Button Content=" Open" Name="btnOpen" Grid.Column="1" Grid.Row="2" Margin="0 20 0 0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="30" Click="btnOpen_Click"/>
    </Grid>
</Page>
