<Page x:Class="WPFPresentationLayer.AdoptionsPages.pgAdoptionsAnimalProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFPresentationLayer.AdoptionsPages"
      mc:Ignorable="d" 
      d:DesignHeight="845" d:DesignWidth="1280"
      Title="pgAdoptionsAnimalProfile"
      Background="white"
      Loaded="Page_Loaded">

    <Grid>
        <Canvas x:Name="canViewAnimalProfileList" >
            <Grid Height="845" Width="1280">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <DataGrid x:Name="dgAnimalProfiles" Grid.Row="1" Grid.Column="1" SelectionMode="Single" Visibility="Visible" IsReadOnly="True" CanUserResizeRows="False" 
                  CanUserResizeColumns="False" CanUserReorderColumns="False" MouseDoubleClick="DgAnimals_MouseDoubleClick" AutoGeneratedColumns="DgAnimalProfiles_AutoGeneratedColumns">
                </DataGrid>

            </Grid>
        </Canvas>
        <Canvas Height="800" Width="1200" Visibility="Hidden" x:Name="canUpdateAnimal" Background="AntiqueWhite">
                <Grid Height="800" Width=" 1200">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label FontSize="36" VerticalAlignment="Center" Grid.Row="0">Update Animal Profile</Label>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>

                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="430"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <!--Animal Description-->
                        <Label x:Name="lblAnimalProfileDescription" Grid.Row="0" Grid.Column="0" 
                           FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Right" Height="40" Margin="0,96,0,97" Width="281">Profile Description:</Label>







                    </Grid>
                </Grid>
            </Canvas>
        <Canvas x:Name="canAnimalProfile" Width="1280" Height="800" Visibility="Hidden">
            <Grid Width="1280" Height="800">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition/>
                    <RowDefinition Height="120"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="450"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Content="Animal Name: " FontWeight="DemiBold" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
                            <Label Grid.Row="1" Content="Animal Species: " FontWeight="DemiBold" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
                            <Label Grid.Row="3" Content="Animal Breed: " FontWeight="DemiBold" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
                            <Label x:Name="lblAnimalName" Grid.Row="0" Grid.Column="1" Content="Placeholder" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <Label x:Name="lblAnimalSpecies" Grid.Row="1" Grid.Column="1" Content="Placeholder" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <Label x:Name="lblAnimalBreed" Grid.Row="2" Grid.Column="1" Content="Placeholder" HorizontalAlignment="Left" VerticalAlignment="Center"/>


                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition Height="100"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Content="Description" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Center"/>
                            <TextBox  x:Name="txtAnimalProfileDescription" Grid.Column="0" Grid.Row="1" Background="LightGoldenrodYellow" 
                             VerticalContentAlignment="Top" VerticalAlignment="Top" Margin="0 10" FontSize="16"  Height="100" Width="300"/>
                            <!--Cancel-->
                            <Button x:Name="btnCancelUpdate" Grid.Row="2" Grid.Column="0" Width="120" Height="30"
                        VerticalAlignment="Center" HorizontalAlignment="Right" Margin="20 0" Click="BtnCancelUpdate_Click" Content="Cancel"></Button>
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="300"/>
                            <RowDefinition/>
                            <RowDefinition Height="100"/>
                        </Grid.RowDefinitions>
                        <Label x:Name="lblAnimalProfileImage" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Profile Image"/>
                        <Border x:Name="profileImageBorder" BorderThickness="1" Grid.Row="1" Grid.Column="1"  BorderBrush="Black">
                            <Image x:Name="currentPetProfile">

                            </Image>
                        </Border>
                        <!--Animal profile Image-->
                        <Button x:Name="btnLoadProfileImage" Click="BtnLoadProfileImage_Click" Content="Select Image" Grid.Column="0" Height="30" Width="120" Grid.Row="2"></Button>
                        <!--Submit-->
                        <Button x:Name="BtnSubmitAnimalUpdate" Grid.Row="3" Grid.Column="0" Content="Submit Update" HorizontalAlignment="Left" Height="30" Width="120" Margin="10 0" Click="BtnSubmitAnimalUpdate_Click"></Button>
                    </Grid>
                </Grid>
            </Grid>
        </Canvas>
    </Grid>
</Page>
