                <Button x:Name="btnEditCount" Content="Edit Count" Width="100" Height="30" Grid.Row="16" Grid.Column="19" Grid.ColumnSpan="3" Click="btnEditCount_Click" Margin="52,3,36,17">

                </Button>
                <Button x:Name="btnReset" Content="Reset" Grid.Row="2" Grid.Column="21" Grid.ColumnSpan="3" Width="100" Height="30" Margin="68,21,20,0" Click="btnReset_Click" >
