                <ComboBox x:Name="cboDepartment" Grid.Row="2" Grid.Column="5" Grid.ColumnSpan="7" FontSize="18" Margin="0 5" Height="30" SelectionChanged="cboDepartment_SelectionChanged"/>
                <DataGrid  x:Name="dgBaseSchedule" ColumnWidth="*" Grid.Row="3" Grid.ColumnSpan="24" Grid.RowSpan="13" SelectionMode="Single" IsReadOnly="True" AutoGeneratedColumns="dgBaseSchedule_AutoGeneratedColumns" Margin="-34,10,20,10"/>
                <Button x:Name="btnSetBaseSchedule" Content="Set Base Schedule" Grid.Row="16" Grid.Column="21" Grid.ColumnSpan="3" Width="110" Height="30" Click="btnSetBaseSchedule_Click" Margin="58,3,20,17">

