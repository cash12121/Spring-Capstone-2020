                <ComboBox x:Name="cboCount"  Grid.Column="11" Grid.Row="10" Grid.ColumnSpan="3" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="30 0 30 0" FontSize="18" MaxDropDownHeight="120"></ComboBox>
                <Button x:Name="btnCancel" Content="Cancel" Grid.Row="13" Grid.Column="7" Grid.ColumnSpan="3" FontSize="18" FontWeight="Bold" Click="btnCancel_Click">
