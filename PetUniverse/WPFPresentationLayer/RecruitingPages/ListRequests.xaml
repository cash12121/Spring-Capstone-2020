<Page x:Class="WPFPresentationLayer.RecruitingPages.ListRequests"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFPresentationLayer.RecruitingPages"
      mc:Ignorable="d" 
      d:DesignHeight="855" d:DesignWidth="1289"
      Title="ListRequests">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="70"></RowDefinition>
        </Grid.RowDefinitions>
        <TabControl x:Name="tabsetRequests" Grid.Row="0" Width="1289" Height="775">
            <TabItem x:Name="tabViewNewRequests" Header="New" FontWeight="Bold">
                <DataGrid x:Name="dgNewRequestList"
                  Margin="42,100,40,82"
                  SelectionMode="Single"
                  FontSize="12"
                  FontWeight="Medium"
                  IsReadOnly="True"
                  ColumnWidth="*" 
                  Loaded="dgNewRequestList_Loaded" 
                  AutoGeneratedColumns="dgNewRequestList_AutoGeneratedColumns" 
                  MouseDoubleClick="dgNewRequestList_MouseDoubleClick"/>
            </TabItem>
            <TabItem x:Name="tabViewActiveRequests" Header="Active" FontWeight="Bold">
                <DataGrid x:Name="dgActiveRequestList"                  
                  Margin="42,100,40,82"
                  SelectionMode="Single"
                  FontSize="12"
                  FontWeight="Medium"
                  IsReadOnly="True" 
                  ColumnWidth="*" Loaded="dgActiveRequestList_Loaded" 
                  AutoGeneratedColumns="dgActiveRequestList_AutoGeneratedColumns" MouseDoubleClick="dgActiveRequestList_MouseDoubleClick"/>
            </TabItem>
            <TabItem x:Name="tabViewCompletedRequests" Header="Done" FontWeight="Bold">
                <DataGrid x:Name="dgDoneRequestList"
                  SelectionMode="Single" 
                  Margin="42,100,40,82"
                  FontSize="12"
                  FontWeight="Medium"
                  IsReadOnly="True"
                  ColumnWidth="*" Loaded="dgDoneRequestList_Loaded" 
                  AutoGeneratedColumns="dgDoneRequestList_AutoGeneratedColumns" MouseDoubleClick="dgDoneRequestList_MouseDoubleClick"/>
            </TabItem>

            <!--  ***DOES NOT CONTAIN FUNCTIONING CODE, ALTERNATE CREATION METHOD HAD TO BE CREATED ON THE FLY***     
            <TabItem x:Name="tabCreateNewRequest" Header="Add" FontWeight="Bold" Background="#fff8e3">
                <Frame x:Name="newRequest" Source="CreatNewRequest.xaml" NavigationUIVisibility="Hidden"></Frame>
            </TabItem>-->
        </TabControl>
        <Button x:Name="btnCreateNewRequest" Content="Create New Request" Grid.Row="1" Width="150" Height="40" Margin="10 10 42 20" HorizontalAlignment="Right" Click="btnCreateNewRequest_Click"></Button> 

        <Frame x:Name="frDeptRequestDetails" NavigationUIVisibility="Hidden" Canvas.Top="10"/>
    </Grid>
</Page>
