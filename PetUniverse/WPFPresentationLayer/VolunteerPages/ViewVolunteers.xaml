<Page x:Class="WPFPresentationLayer.VolunteerPages.ViewVolunteers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFPresentationLayer.VolunteerPages"
      mc:Ignorable="d" 
     d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewVolunteers">
    <!-- Name: Gabi L
      Date: 2/26/2020
      CHECKED BY: 
     
      This window is where the main activity for viewing and adding volunteers will happen-->
    <Canvas x:Name="ViewVolunteer" Visibility="Visible" Width="1200" Height="850">
        <Canvas>
            <Canvas x:Name="canViewVol">
                <Grid Height="807" Width="1200">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="103"></RowDefinition>
                        <RowDefinition ></RowDefinition>
                        <RowDefinition Height="70"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="lblSort" Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="34 0 0 20" Width="78">Sort by Skill</Label>
                    <ComboBox x:Name="cbSort" Grid.Row="0" Grid.Column="1" Width="175" Height="25" Padding="0 0 0 0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0 0 0 20" SelectionChanged="cbSort_SelectionChanged"></ComboBox>
                    <TextBox x:Name="txtSearch" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="1" Width="200" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Padding="0 0 0 0" Margin="0 0 0 20" GotFocus="TxtSearch_GotFocus" TextChanged="TxtSearch_TextChanged" LostFocus="TxtSearch_LostFocus" >Search</TextBox>
                    <Label x:Name="lblSearch" Grid.Row="0" Grid.Column="3" Width="75" Height="25" Margin="0 0 0 20" VerticalAlignment="Bottom" HorizontalAlignment="Left">Live Search</Label>
                    <DataGrid x:Name="dgVolunteerList" SelectionMode="Single" IsReadOnly="True" Grid.Row="1"
                                    Grid.ColumnSpan="4" Grid.RowSpan="1" AutoGeneratedColumns="dgVolunteerList_AutoGeneratedColumns" >
                    </DataGrid>
                    <Button Grid.Column="3" Grid.Row="2" Content="Edit Volunteer" HorizontalAlignment="Left" Margin="10 0 0 0" Width="100" Height="30" Click="Edit_Button_Click"></Button>
                    <Button Grid.Column="2" Grid.Row="2" Content="Add Volunteer" HorizontalAlignment="Right" Margin="0 0 10 0"  Width="100" Height="30" Click="Button_Click"></Button>
                </Grid>
            </Canvas>
        </Canvas>
    </Canvas>
</Page>
